<div class="container">
  <div class="text-center">
    <%= form_with model: task do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :details %>
    <%= f.text_field :details %>
    <% unless f.object.new_record? %>
      <%= f.check_box :completed, class: "checkbox" %>
    <% end %>
    <%= f.submit class: "button-link" %>
    <% end %>
  </div>

</div>
