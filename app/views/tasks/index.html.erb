<div class="container mt-5">
  <div class="text-center">
    <h1>My Tasks</h1>


    <div>
      <ul>
        <% @tasks.each do |task| %>
          <li><%= link_to task.title, task_path(task) %>
          <% if task.completed? %>
            <i class="fa-solid fa-check"></i>
            <% else %>
            <i class="fa-solid fa-xmark"></i>
          <% end %>
        <% end %>
        </ul>
        <button class="button-link"><%= link_to "New Task", new_task_path %></button>
    </div>
  </div>
</div>
