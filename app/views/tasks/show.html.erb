<div class="container">
  <div class="text-center">
    <h1><%= @task.title %></h1>
    <%= @task.details %>
    <div>
      <button class="button-link"><%= link_to "Delete", task_path(@task), data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete?"}%></button>
      <button class="button-link"><%= link_to "Edit", edit_task_path(@task) %></button>
      <button class="button-link"><%= link_to "Back to List", tasks_path(@task) %></button>
    </div>
  </div>
</div>
